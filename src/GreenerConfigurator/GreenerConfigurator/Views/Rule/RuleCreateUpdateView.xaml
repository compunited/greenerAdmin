<UserControl x:Class="GreenerConfigurator.Views.Rule.RuleCreateUpdateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreenerConfigurator.Views.Rule"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:mui="clr-namespace:GreenerConfigurator.ClientCore.Utilities.MUI;assembly=GreenerConfigurator.ClientCore"
             xmlns:extension="clr-namespace:GreenerConfigurator.Utilities.Extensions"
             xmlns:errorbox="clr-namespace:GreenerConfigurator.Controls.ErrorBox"
             xmlns:controls="clr-namespace:GreenerConfigurator.Controls"
             xmlns:enumerations ="clr-namespace:Greener.Web.Definitions.Enums.Networks;assembly=Greener.Web.Definitions.Enums"
             mc:Ignorable="d">
    <StackPanel VerticalAlignment="Stretch">
        
        <StackPanel Style="{StaticResource stpHeader}" >
            <Label x:Name="lblHeaderPageStatus" Style="{StaticResource lblHeader}" Content="{Binding PageStatus}"
                    ContentStringFormat="{x:Static mui:Language.Rule}"/>
            <Label x:Name="lblHeaderRule" Style="{StaticResource lblHeader}" 
                   Content="{Binding RuleModel.Name}" />
        </StackPanel>

        <Grid Margin="5,5,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--#region Rule -->

            <StackPanel x:Name="stDataEntry" Grid.Column="0">

                <StackPanel Style="{StaticResource stpSecondHeader}" Orientation="Horizontal" >
                    <Label x:Name="lblHeaderNetworkdDevice" Style="{StaticResource lblSecondHeader}" Content="{x:Static mui:Language.RuleInformation}"/>
                </StackPanel>

                <Grid x:Name="grdRule" Margin="20,20,0,0" HorizontalAlignment="Left"  >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions >
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label x:Name="lblNameHeader" Content="{x:Static mui:Language.Name}" Style="{StaticResource lblDataEntryHeader}"
                            HorizontalAlignment="Right" Grid.Column="0" Grid.Row="0"/>
                    <TextBox x:Name="txtName" Grid.Row="0" Grid.Column="1" Text="{Binding RuleModel.Name,ValidatesOnDataErrors=True}" 
                             Width="350" MaxLength="150" Style="{StaticResource txtMain}" IsEnabled="{Binding IsEditMode}" />

                    <Label x:Name="lblMessageTextHeader" Content="{x:Static mui:Language.MessageText}" Style="{StaticResource lblDataEntryHeader}"
                            HorizontalAlignment="Right" Grid.Column="0" Grid.Row="1"/>
                    <TextBox x:Name="txtMessageText" Grid.Row="1" Grid.Column="1" Text="{Binding RuleModel.MessageText,ValidatesOnDataErrors=True}" 
                             Width="350" MaxLength="150" Style="{StaticResource txtMain}" IsEnabled="{Binding IsEditMode}" />

                    <Label x:Name="lblPauseHeader" Content="{x:Static mui:Language.PauseRule}" Style="{StaticResource lblDataEntryHeader}"
                            HorizontalAlignment="Right" Grid.Column="0" Grid.Row="2"/>
                    <controls:ToggleSwitch IsBubbleSource ="{Binding PauseRule, Mode=TwoWay}"
                                           Grid.Column="1" Grid.Row="2" IsEnabled="{Binding IsEditMode}" />
                    <!--<CheckBox x:Name="rdbPause" Grid.Column="1" Grid.Row="2"  IsChecked="{Binding PauseRule}" IsEnabled="{Binding IsEditMode}"
                                      Content="{x:Static mui:Language.PauseRule}" Style="{StaticResource ToggleCheckBox}"/>-->
                    <Label x:Name="lblPauseUntilHeader" Content="{x:Static mui:Language.PauseRuleUntill}" Style="{StaticResource lblDataEntryHeader}"
                            HorizontalAlignment="Right" Grid.Column="0" Grid.Row="3"/>
                    <DatePicker x:Name="dpPauseUntil" Grid.Column="1" Grid.Row="3" SelectedDate="{Binding RuleModel.PauseUntil,ValidatesOnDataErrors=True}" 
                            DisplayDate="{Binding RuleModel.PauseUntil}"  IsEnabled="{Binding PauseRule}"/>

                    <Grid Grid.Column="1" Grid.Row="4" IsEnabled="{Binding PauseRule}"  >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="{x:Static mui:Language.Time}" Style="{StaticResource lblDataEntryHeader}"
                            HorizontalAlignment="Right" Grid.Column="0" Grid.Row="3"/>
                        <TextBox x:Name="txtHourText" MaxLength="2" Grid.Column="1" Text="{Binding RuleModel.Hour,ValidatesOnDataErrors=True}" 
                             Width="50"  Style="{StaticResource txtMain}" IsEnabled="{Binding IsEditMode}" />
                        <Label Grid.Column="2" Content=":" Style="{StaticResource lblDataEntryHeader}"
                            HorizontalAlignment="Right" />
                        <TextBox x:Name="txtMinuteText" MaxLength="2" Grid.Column="3" Text="{Binding RuleModel.Minute,ValidatesOnDataErrors=True}" 
                             Width="50" Style="{StaticResource txtMain}" IsEnabled="{Binding IsEditMode}" />
                    </Grid>


                    <Label x:Name="lblAddDeviceInfoHeader" Content="{x:Static mui:Language.AddDeviceInfo}" Style="{StaticResource lblDataEntryHeader}"
                            HorizontalAlignment="Right" Grid.Column="0" Grid.Row="5"/>
                    <controls:ToggleSwitch IsBubbleSource ="{Binding RuleModel.AddDeviceInfo, Mode=TwoWay}"
                                           Grid.Column="1" Grid.Row="5" IsEnabled="{Binding IsEditMode}" />
                    <!--<CheckBox x:Name="rdbAddDeviceInfo" Grid.Column="1" Grid.Row="5"  IsChecked="{Binding RuleModel.AddDeviceInfo}" IsEnabled="{Binding IsEditMode}"
                                      Content="{x:Static mui:Language.AddDeviceInfo}" Style="{StaticResource ToggleCheckBox}"/>-->

                    <Grid x:Name="grdFooter" Grid.Column="1" Grid.Row="6" Margin="0,0,15,0"   >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btnOk" Style="{StaticResource btnPrimary}" Grid.Column="1"  
                                Command="{Binding OnOKCommand}" Content="{Binding ButtonOkText}" />
                        <Button x:Name="btnCancel" Style="{StaticResource btnPrimaryCancel}" Grid.Column="0" 
                            Command="{Binding OnCancelCommand}" Content="{x:Static mui:Language.Cancel}" />
                    </Grid>

                    <errorbox:ErrorBoxView x:Name="errBox" Grid.Row="7" Grid.Column="1" DataContext="{Binding RuleModel}"  />
                </Grid>

            </StackPanel>

            <!--#endregion-->

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--#region NotificationGroupData -->

                <StackPanel x:Name="stNotificationGroupDataList" Grid.Row="0" Margin="5,0,5,0"  
                        HorizontalAlignment="Stretch" IsEnabled="{Binding IsAddRuleDetailEnable}">

                    <StackPanel Style="{StaticResource stpSecondHeader}" Orientation="Horizontal" >
                        <Label x:Name="lblHeaderNotificationGroupDataList" Style="{StaticResource lblSecondHeader}" 
                           Content="{x:Static mui:Language.NotificationGroupDataList}"/>
                    </StackPanel>

                    <StackPanel Margin="0,10,0,5">

                        <Grid IsEnabled="{Binding IsAddRuleDetailEnable}">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="btnAddNotificationGroupData"  Grid.Column="0" Style="{StaticResource btnImage}" 
                                Command="{Binding OnAddNotificationGroupCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Assets/Icons/add-icon.png" Style="{StaticResource MenuImageStyle}" />
                                </StackPanel>
                                <Button.ToolTip>
                                    <ToolTip x:Name="ttAddNotificationGroupData" Content="{x:Static mui:Language.Add}" 
                                         Style="{StaticResource ttStyle}" />
                                </Button.ToolTip>
                            </Button>
                            <Button x:Name="btnEditNotificationGroupData"  Grid.Column="1" Style="{StaticResource btnImage}" 
                                Command="{Binding OnEditNotificationGroupCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Assets/Icons/edit-icon.png" Style="{StaticResource MenuImageStyle}" />
                                </StackPanel>
                                <Button.ToolTip>
                                    <ToolTip x:Name="ttEditNotificationGroupData" Content="{x:Static mui:Language.Edit}" 
                                         Style="{StaticResource ttStyle}" />
                                </Button.ToolTip>
                            </Button>
                            <Button x:Name="btnDeleteNotificationGroupData"  Grid.Column="2" Style="{StaticResource btnImage}" 
                                Command ="{Binding OnDeleteNotificationGroupCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Assets/Icons/delete-icon.png" Style="{StaticResource MenuImageStyle}" />
                                </StackPanel>
                                <Button.ToolTip>
                                    <ToolTip x:Name="ttDeleteNotificationGroupData" Content="{x:Static mui:Language.Delete}" 
                                         Style="{StaticResource ttStyle}" />
                                </Button.ToolTip>
                            </Button>

                        </Grid>

                    </StackPanel>

                    <ListView x:Name="lvNotificationGroupData" ItemsSource="{Binding NotificationGroupDataList}" MaxHeight="500"  HorizontalContentAlignment="Stretch"
                          ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto"
                          SelectionMode="Single" SelectedItem="{Binding SelectedNotificationGroupData}" >

                        <ListView.ItemContainerStyle>
                            <Style TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource MainListViewItem}">
                                <Setter Property="extension:HandleDoubleClickBehavior.Command"
                                        Value="{Binding DataContext.OnEditNotificationGroupCommand, 
                                                RelativeSource={RelativeSource AncestorType={x:Type UserControl}, Mode=FindAncestor}}" />
                                <Setter Property="extension:HandleDoubleClickBehavior.CommandParameter" Value="{Binding}"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.View>
                            <GridView AllowsColumnReorder="false" >
                                <GridViewColumn DisplayMemberBinding="{Binding AlarmLevelName}" 
                                            extension:GridViewSort.PropertyName="SimCardProvider"
                                            Header="{x:Static mui:Language.AlarmLevel}" Width="300" />
                            </GridView>
                        </ListView.View>
                    </ListView>

                </StackPanel>

                <!--#endregion-->

                <!--#region Rule Detail -->

                <StackPanel x:Name="stRuleDetailList" Grid.Row="1" Margin="5,0,5,0"  
                        HorizontalAlignment="Stretch" IsEnabled="{Binding IsAddRuleDetailEnable}">

                    <StackPanel Style="{StaticResource stpSecondHeader}" Orientation="Horizontal" >
                        <Label x:Name="lblHeaderRuleDetailList" Style="{StaticResource lblSecondHeader}" 
                           Content="{x:Static mui:Language.RuleDetailList}"/>
                    </StackPanel>

                    <StackPanel Margin="0,10,0,5">

                        <Grid IsEnabled="{Binding IsAddRuleDetailEnable}">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="btnAdd"  Grid.Column="0" Style="{StaticResource btnImage}" 
                                Command="{Binding OnAddRuleDetailCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Assets/Icons/add-icon.png" Style="{StaticResource MenuImageStyle}" />
                                </StackPanel>
                                <Button.ToolTip>
                                    <ToolTip x:Name="ttAdd" Content="{x:Static mui:Language.Add}" 
                                         Style="{StaticResource ttStyle}" />
                                </Button.ToolTip>
                            </Button>
                            <Button x:Name="btnEdit"  Grid.Column="1" Style="{StaticResource btnImage}" 
                                Command="{Binding OnEditRuleDetailCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Assets/Icons/edit-icon.png" Style="{StaticResource MenuImageStyle}" />
                                </StackPanel>
                                <Button.ToolTip>
                                    <ToolTip x:Name="ttEdit" Content="{x:Static mui:Language.Edit}" 
                                         Style="{StaticResource ttStyle}" />
                                </Button.ToolTip>
                            </Button>
                            <Button x:Name="btnDelete"  Grid.Column="2" Style="{StaticResource btnImage}" 
                                Command ="{Binding OnDeleteRuleDetailCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Assets/Icons/delete-icon.png" Style="{StaticResource MenuImageStyle}" />
                                </StackPanel>
                                <Button.ToolTip>
                                    <ToolTip x:Name="ttDelete" Content="{x:Static mui:Language.Delete}" 
                                         Style="{StaticResource ttStyle}" />
                                </Button.ToolTip>
                            </Button>

                        </Grid>

                    </StackPanel>

                    <ListView x:Name="lvRuleDetail" ItemsSource="{Binding RuleDetailList}" MaxHeight="500"  HorizontalContentAlignment="Stretch"
                          ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto"
                          SelectionMode="Single" SelectedItem="{Binding SelectedRuleDetail}" >

                        <ListView.ItemContainerStyle>
                            <Style TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource MainListViewItem}">
                                <Setter Property="extension:HandleDoubleClickBehavior.Command"
                                        Value="{Binding DataContext.OnDeleteRuleDetailCommand, 
                                                RelativeSource={RelativeSource AncestorType={x:Type UserControl}, Mode=FindAncestor}}" />
                                <Setter Property="extension:HandleDoubleClickBehavior.CommandParameter" Value="{Binding}"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.View>
                            <GridView AllowsColumnReorder="false" >
                                <GridViewColumn DisplayMemberBinding="{Binding AlarmLevelName}" 
                                            extension:GridViewSort.PropertyName="SimCardProvider"
                                            Header="{x:Static mui:Language.AlarmLevel}" Width="300" />
                            </GridView>
                        </ListView.View>
                    </ListView>

                </StackPanel>

                <!--#endregion-->

            </Grid>
            
        </Grid>

    </StackPanel>

</UserControl>
