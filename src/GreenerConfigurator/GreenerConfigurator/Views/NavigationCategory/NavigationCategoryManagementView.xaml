<UserControl x:Class="GreenerConfigurator.Views.NavigationCategory.NavigationCategoryManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreenerConfigurator.Views.NavigationCategory"
             xmlns:mui="clr-namespace:GreenerConfigurator.ClientCore.Utilities.MUI;assembly=GreenerConfigurator.ClientCore"
             xmlns:extension="clr-namespace:GreenerConfigurator.Utilities.Extensions"
             mc:Ignorable="d" >
    <StackPanel VerticalAlignment="Stretch" >

        <StackPanel Style="{StaticResource stpHeader}" >
            <Label x:Name="lblHeader" Style="{StaticResource lblHeader}" 
                   Content="{x:Static mui:Language.NavigationCategoryManagement}" />
        </StackPanel>

        <Grid x:Name="grdMain" Margin="5,5,5,5" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--#region Navigation Category  -->

            <StackPanel Grid.Column="0"  Margin="0,0,0,0" >

                <StackPanel Style="{StaticResource stpSecondHeader}" >
                    <Label x:Name="lblHeaderNavigationCategoryList" Style="{StaticResource lblSecondHeader}" 
                                Content="{x:Static mui:Language.NavigationCategoryList}" />
                </StackPanel>

                <ListView x:Name="lvNavigationCategory" Grid.Row="1" ItemsSource="{Binding NavigationCategoryList}" 
                                  SelectionMode="Single" 
                                  SelectedItem="{Binding SelectedNavigationCategory}" 
                                  extension:GridViewSort.Command="{Binding OnSortPaintCommand}"
                                   ScrollViewer.VerticalScrollBarVisibility="Visible" 
                                  ScrollViewer.CanContentScroll="False">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem" BasedOn="{StaticResource MainListViewItem}">
                            <Setter Property="extension:HandleDoubleClickBehavior.Command"
                                        Value="{Binding RelativeSource={RelativeSource Mode=FindAncestor, 
                                    AncestorType={x:Type UserControl}}, Path=DataContext.OnEditPaintCommand}" />
                            <Setter Property="extension:HandleDoubleClickBehavior.CommandParameter" Value="{Binding}"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.View>
                        <GridView AllowsColumnReorder="true" ColumnHeaderToolTip="{x:Static mui:Language.NavigationCategory}" >
                            <!--<GridViewColumn DisplayMemberBinding="{Binding Path=LogicalDeviceNavigationCategoryId}" 
                                            Header="" Width="30"/>-->
                            <GridViewColumn DisplayMemberBinding="{Binding Path=NavigationCategoryName}" 
                                            Header="{x:Static mui:Language.NavigationCategoryName}" Width="400"/>
                        </GridView>
                    </ListView.View>
                </ListView>

            </StackPanel>

            <!--#endregion-->

            <!--#region Navigation Card  & Group-->

            <StackPanel Grid.Column="1" >

                <!--#region Group  -->

                <StackPanel  Margin="5,0,5,0" >

                    <StackPanel Style="{StaticResource stpSecondHeader}">
                        <Label x:Name="lblHeaderNavigationCardGroupList" Style="{StaticResource lblSecondHeader}" 
                                    Content="{x:Static mui:Language.NavigationCardGroupList}" />
                    </StackPanel>
                    <StackPanel >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="btnAddGroup"  Grid.Column="0" Style="{StaticResource btnImage}" 
                                Command="{Binding OnAddNavigationCardGroupCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Assets/Icons/add-icon.png" Style="{StaticResource MenuImageStyle}" />
                                </StackPanel>
                                <Button.ToolTip>
                                    <ToolTip x:Name="ttAddGroup" Content="{x:Static mui:Language.Add}" 
                                         Style="{StaticResource ttStyle}" />
                                </Button.ToolTip>
                            </Button>
                            <Button x:Name="btnEditGroup"  Grid.Column="1" Style="{StaticResource btnImage}" 
                                Command="{Binding OnEditNaviagtionCardGroupCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Assets/Icons/edit-icon.png" Style="{StaticResource MenuImageStyle}" />
                                </StackPanel>
                                <Button.ToolTip>
                                    <ToolTip x:Name="ttEditGroup" Content="{x:Static mui:Language.Edit}" 
                                         Style="{StaticResource ttStyle}" />
                                </Button.ToolTip>
                            </Button>
                            <Button x:Name="btnDeleteGroup"  Grid.Column="2" Style="{StaticResource btnImage}" 
                                Command ="{Binding OnRemoveNavigationCardGroupCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Assets/Icons/delete-icon.png" Style="{StaticResource MenuImageStyle}" />
                                </StackPanel>
                                <Button.ToolTip>
                                    <ToolTip x:Name="ttDeleteGroup" Content="{x:Static mui:Language.Delete}" 
                                         Style="{StaticResource ttStyle}" />
                                </Button.ToolTip>
                            </Button>
                        </Grid>
                    </StackPanel>
                    <ListView x:Name="lvNavigationCategoryGroup"  ItemsSource="{Binding NavigationCardGroupList}" SelectionMode="Single" 
                                  SelectedItem="{Binding SelectedNavigationCardGroup}"
                                  MaxHeight="400" ScrollViewer.VerticalScrollBarVisibility="Visible" 
                                  ScrollViewer.CanContentScroll="False">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem" BasedOn="{StaticResource MainListViewItem}">
                                <Setter Property="extension:HandleDoubleClickBehavior.Command"
                                        Value="{Binding RelativeSource={RelativeSource Mode=FindAncestor, 
                                    AncestorType={x:Type UserControl}}, Path=DataContext.OnEditNaviagtionCardGroupCommand}" />
                                <Setter Property="extension:HandleDoubleClickBehavior.CommandParameter" Value="{Binding}"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.View>
                            <GridView AllowsColumnReorder="true" ColumnHeaderToolTip="{x:Static mui:Language.NavigationCategory}" >
                                <GridViewColumn DisplayMemberBinding="{Binding Path=Name}" 
                                            Header="{x:Static mui:Language.NavigationCategoryName}" Width="350"/>
                                <GridViewColumn DisplayMemberBinding="{Binding Path=LocationName}" 
                                            Header="{x:Static mui:Language.LocationName}" Width="500"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>

                <!--#endregion-->

                <!--#region Card -->

                <StackPanel Margin="5,5,5,0" >

                    <StackPanel Style="{StaticResource stpSecondHeader}" >
                        <Label x:Name="lblHeaderNavigationCardList" Style="{StaticResource lblSecondHeader}" 
                                Content="{x:Static mui:Language.NavigationCardList}" />
                    </StackPanel>
                    <StackPanel >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="btnAdd"  Grid.Column="0" Style="{StaticResource btnImage}" 
                                Command="{Binding OnAddNavigationCardCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Assets/Icons/add-icon.png" Style="{StaticResource MenuImageStyle}" />
                                </StackPanel>
                                <Button.ToolTip>
                                    <ToolTip x:Name="ttAdd" Content="{x:Static mui:Language.Add}" 
                                         Style="{StaticResource ttStyle}" />
                                </Button.ToolTip>
                            </Button>
                            <Button x:Name="btnEdit"  Grid.Column="1" Style="{StaticResource btnImage}" 
                                Command="{Binding OnEditNaviagtionCardCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Assets/Icons/edit-icon.png" Style="{StaticResource MenuImageStyle}" />
                                </StackPanel>
                                <Button.ToolTip>
                                    <ToolTip x:Name="ttEdit" Content="{x:Static mui:Language.Edit}" 
                                         Style="{StaticResource ttStyle}" />
                                </Button.ToolTip>
                            </Button>
                            <Button x:Name="btnDelete"  Grid.Column="2" Style="{StaticResource btnImage}" 
                                Command ="{Binding OnRemoveNavigationCardCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Assets/Icons/delete-icon.png" Style="{StaticResource MenuImageStyle}" />
                                </StackPanel>
                                <Button.ToolTip>
                                    <ToolTip x:Name="ttDelete" Content="{x:Static mui:Language.Delete}" 
                                         Style="{StaticResource ttStyle}" />
                                </Button.ToolTip>
                            </Button>
                        </Grid>
                    </StackPanel>
                    <ListView x:Name="lvNavigationCategoryCard"  ItemsSource="{Binding NavigationCardList}" SelectionMode="Single" 
                                  SelectedItem="{Binding SelectedNavigationCard}"
                                  MaxHeight="400" ScrollViewer.VerticalScrollBarVisibility="Visible" 
                                  ScrollViewer.CanContentScroll="False">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem" BasedOn="{StaticResource MainListViewItem}">
                                <Setter Property="extension:HandleDoubleClickBehavior.Command"
                                        Value="{Binding RelativeSource={RelativeSource Mode=FindAncestor, 
                                    AncestorType={x:Type UserControl}}, Path=DataContext.OnEditNaviagtionCardCommand}" />
                                <Setter Property="extension:HandleDoubleClickBehavior.CommandParameter" Value="{Binding}"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.View>
                            <GridView AllowsColumnReorder="true" ColumnHeaderToolTip="{x:Static mui:Language.NavigationCard}" >
                                <!--<GridViewColumn DisplayMemberBinding="{Binding Path=LogicalDeviceNavigationCategoryId}" 
                                            Header="" Width="30"/>-->
                                <GridViewColumn DisplayMemberBinding="{Binding Path=CardName}" 
                                            Header="{x:Static mui:Language.NavigationCardCardName}" Width="350"/>
                                <GridViewColumn DisplayMemberBinding="{Binding Path=LocationName}" 
                                            Header="{x:Static mui:Language.LocationName}" Width="500"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                </StackPanel>

                <!--#endregion-->

            </StackPanel>

            <!--#endregion-->

        </Grid>

    </StackPanel>
</UserControl>
