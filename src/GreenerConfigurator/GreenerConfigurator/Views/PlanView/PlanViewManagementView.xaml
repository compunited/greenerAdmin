<UserControl x:Class="GreenerConfigurator.Views.PlanView.PlanViewManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="clr-namespace:GreenerConfigurator.ClientCore.Utilities.MUI;assembly=GreenerConfigurator.ClientCore"
             xmlns:extension="clr-namespace:GreenerConfigurator.Utilities.Extensions"
             xmlns:errorbox="clr-namespace:GreenerConfigurator.Controls.ErrorBox"
             xmlns:controls="clr-namespace:GreenerConfigurator.Controls"
             xmlns:enumerations ="clr-namespace:Greener.Web.Definitions.Enums.Networks;assembly=Greener.Web.Definitions.Enums"    
             xmlns:local="clr-namespace:GreenerConfigurator.Views.PlanView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel VerticalAlignment="Stretch" >

        <StackPanel Style="{StaticResource stpHeader}" >
            <Label x:Name="lblHeader" Style="{StaticResource lblHeader}" Content="{x:Static mui:Language.PlanViewManagement}" />
        </StackPanel>

        <Grid x:Name="grdMain" HorizontalAlignment="Stretch" VerticalAlignment="Top">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!--# Location -->

            <StackPanel Margin="15,15,5,0" Grid.Column="0" Grid.Row="0" >

                <StackPanel Style="{StaticResource stpSecondHeader}" >
                    <Label x:Name="lblHeaderLocationList" Style="{StaticResource lblSecondHeader}" 
                     Content="{x:Static mui:Language.LocationList}" />
                </StackPanel>

                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <!--<Button x:Name="btnAdd"  Grid.Column="0" Style="{StaticResource btnImage}" 
                                Command="{Binding OnAddPlanViewCommand}" IsEnabled="{Binding IsPlanViewAddEnable}" >
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Assets/Icons/add-icon.png" Style="{StaticResource MenuImageStyle}" />
                            </StackPanel>
                            <Button.ToolTip>
                                <ToolTip x:Name="ttAdd" Content="{x:Static mui:Language.Add}" Style="{StaticResource ttStyle}" />
                            </Button.ToolTip>
                        </Button>-->
                    </Grid>
                </StackPanel>

                <!--#region Location List -->

                <ListView x:Name="lvLocation"  ItemsSource="{Binding LocationList}" SelectionMode="Single" 
                       SelectedItem="{Binding SelectedLocation}" 
                       MaxHeight="400" ScrollViewer.VerticalScrollBarVisibility="Visible" 
                       ScrollViewer.CanContentScroll="False" extension:ListViewExtensions.ScrollIntoViewOnChange="True">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem" BasedOn="{StaticResource MainListViewItem}"/>

                    </ListView.ItemContainerStyle>
                    <ListView.View>
                        <GridView AllowsColumnReorder="true" ColumnHeaderToolTip="{x:Static mui:Language.LocationName}" >
                            <GridViewColumn DisplayMemberBinding="{Binding Path=LocationName}" 
                                 Header="{x:Static mui:Language.LocationName}" Width="450"/>
                            <GridViewColumn DisplayMemberBinding="{Binding Path=LocationTypeName}" 
                                 Header="{x:Static mui:Language.LocationTypeName}" Width="350"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <!--#endregion-->

            </StackPanel>

            <!--#endregion-->

            <!--#region PanelView  -->

            <StackPanel Margin="15,15,15,0" Grid.ColumnSpan="2" Grid.Row="1" >

                <StackPanel Style="{StaticResource stpSecondHeader}" >
                    <Label x:Name="lblHeaderLocationAddUpdate" Style="{StaticResource lblSecondHeader}" 
                             Content="{x:Static mui:Language.SetPanelViewHeader}" />
                </StackPanel>

                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btnAdd"  Grid.Column="0" Style="{StaticResource btnImage}" 
                            Command="{Binding OnAddPlanViewCommand}" IsEnabled="{Binding IsPlanViewAddEnable}" >
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Assets/Icons/add-icon.png" Style="{StaticResource MenuImageStyle}" />
                            </StackPanel>
                            <Button.ToolTip>
                                <ToolTip x:Name="ttAdd" Content="{x:Static mui:Language.Add}" Style="{StaticResource ttStyle}" />
                            </Button.ToolTip>
                        </Button>
                        <Button x:Name="btnEdit"  Grid.Column="1" Style="{StaticResource btnImage}" IsEnabled="{Binding IsPlanViewEditEnable}" 
                                  Command="{Binding OnEditPlanViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Assets/Icons/edit-icon.png" Style="{StaticResource MenuImageStyle}" />
                            </StackPanel>
                            <Button.ToolTip>
                                <ToolTip x:Name="ttEdit" Content="{x:Static mui:Language.Edit}" Style="{StaticResource ttStyle}" />
                            </Button.ToolTip>
                        </Button>
                        <Button x:Name="btnDelete"  Grid.Column="2" Style="{StaticResource btnImage}" 
                                  Command ="{Binding OnDeletePlanViewCommand}" IsEnabled="{Binding IsPlanViewEditEnable}">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Assets/Icons/delete-icon.png" Style="{StaticResource MenuImageStyle}" />
                            </StackPanel>
                            <Button.ToolTip>
                                <ToolTip x:Name="ttDelete" Content="{x:Static mui:Language.Delete}" Style="{StaticResource ttStyle}" />
                            </Button.ToolTip>
                        </Button>
                    </Grid>
                </StackPanel>

                <!--#region PlanView Items -->

                <ListView ItemsSource="{Binding PlanItemList}" SelectionMode="Single" IsEnabled="{Binding IsPlanViewEditEnable}"
                          SelectedItem="{Binding SelectedPlanItem}"
                          MaxHeight="400" ScrollViewer.VerticalScrollBarVisibility="Visible" 
                          ScrollViewer.CanContentScroll="False">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem" BasedOn="{StaticResource MainListViewItem}">
                            <Setter Property="extension:HandleDoubleClickBehavior.Command"
                                    Value="{Binding RelativeSource={RelativeSource Mode=FindAncestor, 
                                AncestorType={x:Type UserControl}}, Path=DataContext.OnEditPlanViewCommand}" />
                            <Setter Property="extension:HandleDoubleClickBehavior.CommandParameter" Value="{Binding}"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.View>
                        <GridView AllowsColumnReorder="true" ColumnHeaderToolTip="{x:Static mui:Language.Name}" >
                            <GridViewColumn DisplayMemberBinding="{Binding Path=Name}" 
                                            Header="{x:Static mui:Language.PlanViewName }" Width="250"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <!--#endregion-->

                <StackPanel Visibility="{Binding ErrorMessageVisibility}" >
                    <Label x:Name="lblError" Style="{StaticResource lblDataEntryHeader}" Foreground="Red" Content="{Binding ErrorMessage}" />
                </StackPanel>

            </StackPanel>

            <!--#endregion-->

        </Grid>

    </StackPanel>
</UserControl>
