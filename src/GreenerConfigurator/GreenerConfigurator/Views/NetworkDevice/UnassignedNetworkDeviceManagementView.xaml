<UserControl x:Class="GreenerConfigurator.Views.NetworkDevice.UnassignedNetworkDeviceManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mui="clr-namespace:GreenerConfigurator.ClientCore.Utilities.MUI;assembly=GreenerConfigurator.ClientCore"
             xmlns:extension="clr-namespace:GreenerConfigurator.Utilities.Extensions"
             xmlns:local="clr-namespace:GreenerConfigurator.Views.NetworkDevice"
             mc:Ignorable="d">
    <StackPanel VerticalAlignment="Stretch">

        <StackPanel Style="{StaticResource stpHeader}">
            <Label x:Name="lblHeader"
                   Style="{StaticResource lblHeader}"
                   Content="{x:Static mui:Language.ManageUnassignedNetworkDevice}" />
        </StackPanel>

        <!--#region NetworkDevice information -->

        <StackPanel Margin="15,15,15,0"
                    Grid.Column="1">

            <StackPanel  Margin="0,15,15,10">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btnAdd"
                            Grid.Column="1"
                            Style="{StaticResource btnImage}"
                            Command="{Binding OnAddUnassignedNetworkDeviceCommand}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Assets/Icons/add-icon.png"
                                   Style="{StaticResource MenuImageStyle}" />
                        </StackPanel>
                        <Button.ToolTip>
                            <ToolTip x:Name="ttAdd"
                                     Content="{x:Static mui:Language.Add}"
                                     Style="{StaticResource ttStyle}" />
                        </Button.ToolTip>
                    </Button>
                </Grid>

                <TextBox Name="tbMultiLine"
                         Style="{StaticResource txtMain}"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Margin="0,10,0,10"
                         Height="150"
                         HorizontalAlignment="Stretch"
                         Text="{Binding ImportUnassignedListError}"
                         VerticalScrollBarVisibility="Visible" />
            </StackPanel>

            <!--#region NetworkDevice List -->

            <ListView x:Name="lvUnassingedNetworkDevice"
                      ItemsSource="{Binding UnassignedNetworkDeviceList}"
                      SelectionMode="Single"
                      MaxHeight="400"
                      ScrollViewer.VerticalScrollBarVisibility="Visible"
                      ScrollViewer.CanContentScroll="False">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem"
                           BasedOn="{StaticResource MainListViewItem}">
                        <Setter Property="extension:HandleDoubleClickBehavior.Command"
                                Value="{Binding RelativeSource={RelativeSource Mode=FindAncestor, 
                          AncestorType={x:Type UserControl}}, Path=DataContext.OnEditNetworkDeviceCommand}" />
                        <Setter Property="extension:HandleDoubleClickBehavior.CommandParameter"
                                Value="{Binding}" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView AllowsColumnReorder="true"
                              ColumnHeaderToolTip="{x:Static mui:Language.SerialNumber}">
                        <GridViewColumn DisplayMemberBinding="{Binding Path=SerialNumber}"
                                        Header="{x:Static mui:Language.SerialNumber}"
                                        Width="300" />
                        <GridViewColumn DisplayMemberBinding="{Binding Path=IMEI}"
                                        Header="{x:Static mui:Language.IMEI}"
                                        Width="350" />
                        <GridViewColumn DisplayMemberBinding="{Binding Path=MAC}"
                                        Header="{x:Static mui:Language.MACAddress}"
                                        Width="350" />
                        <GridViewColumn DisplayMemberBinding="{Binding Path=MacRange}"
                                        Header="{x:Static mui:Language.MACAddress}"
                                        Width="350" />
                        <GridViewColumn DisplayMemberBinding="{Binding Path=IsAssinged}"
                                        Header="{x:Static mui:Language.IsAssinged}"
                                        Width="350" />
                    </GridView>
                </ListView.View>
            </ListView>

            <!--#endregion-->

        </StackPanel>


    </StackPanel>

</UserControl>
