<UserControl x:Class="GreenerConfigurator.Views.RuleSetting.NewRulesettingView"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="clr-namespace:GreenerConfigurator.ClientCore.Utilities.MUI;assembly=GreenerConfigurator.ClientCore"
             xmlns:controls="clr-namespace:GreenerConfigurator.Controls"
             mc:Ignorable="d" >
    <StackPanel VerticalAlignment="Stretch">
        <StackPanel Style="{StaticResource stpHeader}" >
            <Label x:Name="lblHeader" Style="{StaticResource lblHeader}" Content="{x:Static mui:Language.NewRule}" />
        </StackPanel>
        <StackPanel>
            <StackPanel Margin="15, 15, 0, 15" Orientation="Vertical">
                <StackPanel Orientation="Horizontal" Margin="0, 15, 15, 0"  Background="White" VerticalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" Margin="10, 5, 10, 0" VerticalAlignment="Top">
                        <controls:ToggleSwitch IsBubbleSource ="{Binding IsChecked, Mode=TwoWay}"/>
                        <Label Content="{Binding CheckedText}" HorizontalAlignment="Left"/>
                    </StackPanel>

                    <Label Content="Pouse until" VerticalAlignment="Top" Height="30" FontSize="15" Margin="10, 0, 0, 0"/>
                    <Label x:Name="SelectedDateText" Content="{Binding SelectedDateText}" BorderBrush="Black" VerticalAlignment="Top" BorderThickness="1" Height="30" FontSize="15" Margin="10, 0, 0, 0"/>
                    <Calendar Margin="5,0,5,0" Visibility="{Binding CalendarVisibility}" SelectedDate="{Binding SelectedDate, Mode=TwoWay}" Height="{Binding HeightCalendar}" Width="{Binding WidthCalendar}" HorizontalAlignment="Left" VerticalAlignment="Top" />
                    <Button Style="{StaticResource btnImage}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0, 0, 0, 0" Padding="0, 0, 0, 0"
                                Command="{Binding OnOpenCalendarCommand}">
                        <StackPanel>
                            <Image Source="/Assets/Icons/calendar.png" Height="30" Width="30" />
                        </StackPanel>
                    </Button>
                </StackPanel>
                <StackPanel Margin="0, 15, 15, 0" Background="White" Orientation="Vertical">
                    <Label Content="Schedule ..." BorderBrush="Black" FontSize="15" BorderThickness="1" />
                    <StackPanel Margin="0, 5, 0, 10">
                        <TreeView Width="250" HorizontalAlignment="Left">
                            <TreeViewItem FontSize="14" Header="Season / time of year related" />
                            <TreeViewItem FontSize="14" Header="and this" />
                            <TreeViewItem FontSize="14" Header="use spasec or dots for hierarchy">
                                <TreeViewItem FontSize="14" Header="just like">
                                    <TreeViewItem FontSize="14" Header="this" />
                                </TreeViewItem>
                            </TreeViewItem>
                        </TreeView>

                    </StackPanel>
                </StackPanel>
                <StackPanel Margin="0, 15, 15, 0" Background="White" Orientation="Vertical">
                    <Label Content="Conditions ..." BorderBrush="Black" FontSize="15" BorderThickness="1" />
                    <StackPanel Margin="0, 5, 0, 0" Orientation="Horizontal">
                        <Image Source="/Assets/Icons/add.png" Height="30" Width="30" HorizontalAlignment="Left" />
                        <Label Content="AirQuality 02 -> DataDetail 4 is greater 65" FontSize="14" Margin="5, 0, 0, 0" VerticalAlignment="Bottom"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Margin="0, 15, 15, 0" Background="White" Orientation="Vertical" Height="200">
                    <Label Content="Alarm settings ..." BorderBrush="Black" FontSize="15" BorderThickness="1" />
                    <StackPanel>
                        <ComboBox Width="30" FontSize="15" Margin="5, 5, 0, 0" HorizontalAlignment="Left">
                            <ComboBoxItem IsSelected="True">Push Notification</ComboBoxItem>
                            <ComboBoxItem>E-mail</ComboBoxItem>
                            <ComboBoxItem>SMS</ComboBoxItem>
                            <ComboBoxItem>Teams</ComboBoxItem>
                            <ComboBoxItem>WhatsApp</ComboBoxItem>
                            <ComboBoxItem>Alexa</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
