<UserControl x:Class="GreenerConfigurator.Controls.ErrorBox.ErrorBoxView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreenerConfigurator.Controls.ErrorBox"
             mc:Ignorable="d" >
    <UserControl.Resources>
        <Style TargetType="ListBoxItem">
            <Setter Property="Foreground" Value="Red" />
            <Setter Property="FontSize" Value="16" />
        </Style>
        <Style TargetType="ListBox">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Error}" Value="">
                    <Setter Property="BorderBrush" Value="Red" />
                </DataTrigger>
                <Trigger Property="IsEnabled"  Value="True">
                <Setter Property="BorderBrush" Value="Transparent" />
            </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid x:Name="grdErrorLsit" >
        <StackPanel>
        <ListBox x:Name="lbMain" DataContextChanged="lbMain_DataContextChanged" Margin="0,10,0,0" 
                 ItemsSource="{Binding ErrorList}" IsEnabled="True" Background="Transparent">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical" >
                        <TextBlock Text="{Binding}" Foreground="Red" Background="Transparent"  />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        
        </StackPanel>
    </Grid>
</UserControl>
