@page "/rules"
@using GreenerConfigurator.ClientCore.Services.Rule
@using Greener.Web.Definitions.API.Rule
@using Microsoft.AspNetCore.Authorization
@inject RuleService RuleService

<PageTitle>Rules | Greener Configurator</PageTitle>

<div class="page-header">
    <h1>Rules</h1>
    <button class="btn btn-primary">
        <span class="bi bi-plus-lg"></span> Add Rule
    </button>
</div>

@if (rules == null)
{
    <div class="loading-state">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p>Loading rules...</p>
    </div>
}
else if (!rules.Any())
{
    <div class="empty-state">
        <div class="empty-icon">
            <span class="bi bi-diagram-3"></span>
        </div>
        <h3>No Rules Configured</h3>
        <p>Create rules to automate your system.</p>
        <button class="btn btn-primary mt-3">Add Rule</button>
    </div>
}
else
{
    <div class="row g-3">
        @foreach (var rule in rules)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">@rule.Name</h5>
                            <span class="badge bg-primary">Active</span>
                        </div>
                        <!-- Description removed as it is not available in RuleViewDto -->
                    </div>
                    <div class="card-footer bg-transparent border-top-0">
                        <button class="btn btn-sm btn-outline-secondary w-100">Configure</button>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private IEnumerable<RuleViewDto>? rules; 

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(500);
        try 
        {
            rules = await RuleService.GetAllRulesAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading rules: {ex.Message}");
            rules = new List<RuleViewDto>();
        }
    }
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .loading-state, .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: white;
        border-radius: 8px;
        border: 1px solid var(--greener-border);
    }

    .empty-icon {
        font-size: 3rem;
        color: var(--greener-text-muted);
        margin-bottom: 1rem;
    }
    
    .card {
        border: 1px solid var(--greener-border);
        box-shadow: var(--shadow-sm);
        border-radius: 8px;
        transition: transform 0.2s;
    }
    
    .card:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
    }
</style>
