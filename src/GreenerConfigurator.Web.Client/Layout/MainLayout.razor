@inherits LayoutComponentBase

<AuthorizeView>
    <Authorized>
        <div class="layout-container">
            <aside class="sidebar">
                <NavMenu />
            </aside>

            <main class="main-content">
                <header class="top-bar">
                    <div class="top-bar-content">
                        <span class="page-title">Greener Configurator</span>
                        <div class="top-bar-actions">
                            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank" class="help-link">Help & Support</a>
                        </div>
                    </div>
                </header>

                <div class="content-wrapper">
                    @Body
                </div>
            </main>
        </div>
    </Authorized>
    <NotAuthorized>
        @Body
    </NotAuthorized>
</AuthorizeView>
